<ModOps>
    <ImyaTweaks Title="[DLC12] 'SMALL' map size option" Description="Determines the used Map Template layout for the generation of the vanilla New World session while using DLC12 'New World Rising' and small map size. Only switch on one toggle in this section! (Otherwise only the last option is active)" Icon="data/ui/2kimages/main/3dicons/icon_dlc_new_world_rising_128.png" />

    <!-- #small map size -->
    <!-- add used map templates from pre DLC12 with the corner variant -->
    <Group ModOpID="ToggleCornerMap_NW_small_DLC12">
        <ModOp Type="replace" GUID="141379,142488,142489" Path="/Values/MapTemplate/EnlargedTemplateFilename">
            <EnlargedTemplateFilename>data/taludas/sessions/maps/pool/colony01_expanded/colony01_s_01_corners_dlc12enlarged/colony01_s_01_corners_dlc12enlarged.a7t</EnlargedTemplateFilename>
        </ModOp>
    </Group>

    <ImyaExpose Path="*" ModOpID="ToggleCornerMap_NW_small_DLC12" ExposeID="[DLC12] small 'Corner'" Kind="SkipToggle" InitState="True"></ImyaExpose>

    <!-- add used map templates from pre DLC12 with the island arch variant -->
    <Group ModOpID="ToggleIslandArchMap_NW_small_DLC12">
        <ModOp Type="replace" GUID="141379,142488,142489" Path="/Values/MapTemplate/EnlargedTemplateFilename">
            <EnlargedTemplateFilename>data/taludas/sessions/maps/pool/colony01_expanded/colony01_s_02_islandarch_dlc12enlarged/colony01_s_02_islandarch_dlc12enlarged.a7t</EnlargedTemplateFilename>
        </ModOp>
    </Group>

    <ImyaExpose Path="*" ModOpID="ToggleIslandArchMap_NW_small_DLC12" ExposeID="[DLC12] small 'Island Arch'" Kind="SkipToggle"></ImyaExpose>

    <!-- add used map templates from pre DLC12 with the pirates den variant -->
    <Group ModOpID="TogglePiratesDenMap_NW_small_DLC12">
        <ModOp Type="replace" GUID="141379,142488,142489" Path="/Values/MapTemplate/EnlargedTemplateFilename">
            <EnlargedTemplateFilename>data/taludas/sessions/maps/pool/colony01_expanded/colony01_s_03_piratesden_dlc12enlarged/colony01_s_03_piratesden_dlc12enlarged.a7t</EnlargedTemplateFilename>
        </ModOp>
    </Group>

    <ImyaExpose Path="*" ModOpID="TogglePiratesDenMap_NW_small_DLC12" ExposeID="[DLC12] small 'Pirates Den'" Kind="SkipToggle"></ImyaExpose>

</ModOps>
